<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:elevation="3dp"
        android:translationZ="3dp"
        android:layout_margin="15dp"
        android:background="@drawable/bg_for_products"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image"
            android:elevation="4dp"
            android:translationZ="4dp"
            android:background="@drawable/shadow_for_images"
            android:layout_width="match_parent"
            android:paddingTop="20dp"
            android:layout_height="120dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:paddingBottom="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/s2" />
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mens Shirt"
            android:paddingLeft="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_below="@id/image"
            android:gravity="center_horizontal"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="5dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:alpha=".9"/>
        <TextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mens Shirt"
            android:paddingLeft="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_below="@id/image"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="5dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:alpha=".9"/>

        <RelativeLayout
            android:id="@+id/cover3"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="0dp"
            android:layout_width="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/old"
                android:fontFamily="@font/abhaya_libre_medium"
                android:layout_width="wrap_content"
                android:textColor="@color/blink"
                android:textStyle="normal"
                android:layout_alignParentStart="true"
                android:layout_height="wrap_content"
                android:text=" &#8377; 120"
                tools:ignore="HardcodedText" />

            <View
                android:layout_width="35dp"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/black" />

            <TextView
                android:id="@+id/newprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/old"
                android:fontFamily="@font/abhaya_libre_medium"
                android:text=" &#8377; 110"
                android:textColor="@color/price"
                android:textStyle="bold" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_baseline_favorite_border_24"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Buy Now"
            android:backgroundTint="#FF9800"
            android:id="@+id/btnbuy"/>
    </LinearLayout>

</RelativeLayout>